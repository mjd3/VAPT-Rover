<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    tools:context="com.virtualapt.rover.cheburashka.RemoteControllerActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/roverFeed"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/layout_joystick"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/image_button_bg"
        android:layout_marginEnd="80dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No data..."
        android:id="@+id/jsData"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/layout_joystick" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true">

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/stop_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/stop_sign"
        android:layout_gravity="bottom"
        android:layout_alignEnd="@+id/jsData"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/stop_button"
        android:id="@+id/left_turn_vert_layout"
        android:layout_gravity="bottom">
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/degrees_left_90"
            android:visibility="gone"
            android:layout_toRightOf="@+id/stop_button" />
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/left_turn_button"
            android:src="@drawable/rotate_left_arrow"
            android:layout_alignParentBottom="true"
            android:layout_above="@+id/degrees_left_90"
            android:layout_toEndOf="@+id/stop_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/left_turn_vert_layout"
        android:layout_gravity="bottom">
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/degrees_right_90"
            android:visibility="gone"
            android:layout_above="@+id/right_turn_button"/>
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/right_turn_button"
            android:layout_alignParentBottom="true"
            android:src="@drawable/rotate_right_arrow" />
    </LinearLayout>
</LinearLayout>

    <SeekBar
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/lWheelSeekBar"
        android:layout_above="@+id/layout_joystick"
        android:layout_alignParentStart="true"
        android:indeterminate="false" />

    <SeekBar
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/rWheelSeekBar"
        android:layout_below="@+id/lWheelSeekBar"
        android:layout_alignParentStart="true"
        android:indeterminate="false" />

    <SeekBar
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/t_SeekBar"
        android:layout_below="@+id/rWheelSeekBar"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_above="@+id/rWheelSeekBar"
        android:layout_toEndOf="@+id/rWheelSeekBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView2"
        android:layout_above="@+id/t_SeekBar"
        android:layout_toEndOf="@+id/rWheelSeekBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/t_SeekBar"
        android:layout_toEndOf="@+id/t_SeekBar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Command"
        android:id="@+id/commandButton"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

</RelativeLayout>
